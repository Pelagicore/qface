{%+ macro enum_decl(enum) -%}
    enum {{enum}}Enum {
    {% for member in enum.members %}
        {{member.name}} = {{member.value}}{% if not loop.last %},{%endif%}

    {% endfor %}
    };
    {% if enum.is_flag %}
    Q_DECLARE_FLAGS({{enum}}Enums, {{enum}}Enum)
    Q_FLAG({{enum}}Enum)
    {% else %}
    Q_ENUM({{enum}}Enum)
    {% endif %}
{%- endmacro %}

